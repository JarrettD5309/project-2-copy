<div class="container">

  <div class="row">
    <div class="col-md-12">
      <h4>Top Rated Books</h4>
    </div>
  </div>

  <div class="row">
    {{#each books}}
    <div class="col-md-6 col-lg-4 col-xl-3 py-2">
      <div class="card-border text-center">
        <img src="{{image}}" alt="{{title}} cover" class="img py-2">
        <h6 id="bookone-title" class="px-1">{{title}}</h6>
        <p id="bookone-author" class="px-1">By {{author}}</p>
        <p id="bookone-votes">Current Votes: {{vote}}</p>
      </div>
    </div>
    {{/each}}
  </div>

  <div class="row">
    <div class="col-md-12 my-2">
      <button class="btn btn-warning" class="btn btn-outline-success" type="button">Top This
        Year</button>
    </div>
  </div>

</div>

{{!-- login modal --}}
<div class="modal fade" id="login" tabindex="-1" role="dialog" aria-labelledby="loginModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="loginModalLabel">Please sign in </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{!-- this is where login success status displays --}}
        <div id="modal-msg">
          <p>Please enter your details</p>
        </div>

        <form>
          <div class="form-group">
            <label for="username" class="col-form-label">Username:</label>
            <input type="text" id="username">
          </div>
          <div class="form-group">
            <label for="password" class="col-form-label">Password:</label>
            <input type="password" id="password">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn  btn-warning" id="login-button">Confirm</button>
      </div>
    </div>
  </div>
</div>


{{!-- sign up modal --}}
<div class="modal fade" id="signup" tabindex="-1" role="dialog" aria-labelledby="signupModalLabel" aria-hidden="true">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title" id="signupModalLabel">Please sign up</h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Close">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        {{!-- this is where signup success status displays --}}
        <div id="modal2-msg">
          <p>Please enter your details</p>
        </div>
        <form>
          <div class="form-group">
            <label for="postUsername" class="col-form-label">Username:</label>
            <input type="text" id="postUsername">
          </div>
          <div class="form-group">
            <label for="postPassword" class="col-form-label">Password:</label>
            <input type="password" id="postPassword">
          </div>
        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        <button type="button" class="btn btn-warning" id="create-button">Submit</button>
      </div>
    </div>
  </div>
</div>

