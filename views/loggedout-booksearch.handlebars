      <div class="modal-body">
        <form action="/api" method="POST">
          <div class="form-group">
            <label for="postUsername" class="col-form-label">Username:</label>
            <input type="text" id="postUsername" name="postUsername">
          </div>
          <div class="form-group">
            <label for="postPassword" class="col-form-label">Password:</label>
            <input type="password" id="postPassword" name="postPassword">
          </div>
          <button type="submit" class="btn btn-warning">Submit</button>


        </form>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
      </div>
    </div>
  </div>
</div>

